# include <stdio.h>
# include <stdlib.h>

void print_array(double vector1[], int size){

    for (int i = 0; i < size; i++){

        printf("[%d] = %lf, ", i, vector1[i]);
    }

}


void add_array(double vector1[], double vector2[], double vector3[], int size){

    for (int i = 0; i < size; i++){

        vector3[i] = vector1[i] + vector2[i];

    }

    for (int i = 0; i < size; i++){

        printf("[%d] = %lf, ", i, vector3[i]);

    }
}


double scale_prod(double vector1[], double vector2[], int size){

    double sum = 0;

    for (int i = 0; i < size; i++){

        sum += vector1[i]* vector2[i];
    }

    return sum;

}





