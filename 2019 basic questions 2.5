//把一个string 存到另外一个array里面， 另外一个array有限制的size
//如果string的size 超过了array的size 那就只存储前半部分的string

# include <stdio.h>
# include <stdlib.h>
void string_copy(const char source[], char destination[], int n);

int main(){

    int size = 0;
    char a[size];
    char b[10];

    puts("Enter the input string:");
    gets(a);
    puts("");

    for (int i = 0; a[i] != '\0'; i++){

        size++;

    }

    string_copy(a,b,size);

    return 0;
}


void string_copy(const char source[], char destination[], int n){

    if(sizeof(destination)/sizeof(char) > n){

        for ( int i = 0; i < n ; i ++){

            destination[i] = source [i];

        }

    }else{

        for ( int i = 0; i < sizeof(destination)/sizeof(char) ; i ++){

            destination[i] = source [i];

        }

    }

    for (int i = 0; destination[i] != '\0' ; i++ ){

        printf("The destination array stored [%d] is %c. \n", i, destination[i]);

    }

}








