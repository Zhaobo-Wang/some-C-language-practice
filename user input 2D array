#include <stdio.h>
#include <stdlib.h>

int main(){

    int nrows, ncols;

    int mat[nrows][ncols];

    printf("Enter the row and col size of the matrix: ");
    scanf("%d%d", &nrows, &ncols);

    for(int i = 0; i < nrows; ++i){

        for(int j = 0; j < ncols ; ++j){

            printf("Enter the elements in the matrix [%d] row and [%d] col: \n",i,j);

            scanf("%d", &mat[i][j]);

        }
    }

    for(int i = 0; i < nrows; ++i){

        for(int j = 0; j < ncols ; ++j){

            printf("%d\t", mat[i][j]);
        }

    printf("\n");

    }

}





